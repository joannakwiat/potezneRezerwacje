extends base

block content
    section.main
        .card-container
            each meeting in user.meetings
                .card.signingMeetingCard
                    .card__details
                        h4.card__sub-heading= `Info: ${meeting.info}`
                        h4.card__sub-heading= `Place: ${meeting.place}`
                        h4.card__sub-heading= `Limit: ${meeting.limit}`
                        h4.card__sub-heading= `Date: ${meeting.date}`
                    .card__footer
                        button.signForMeetingBtn(value=`${meeting.id}`) Sign for this meeting